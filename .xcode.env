# This `.xcode.env` file is versioned and is used to source the environment
# used when running script phases inside Xcode.
# To customize your local environment variables for Xcode builds,
# you can create a `.xcode.env.local` file that is not versioned.

export NODE_BINARY=$(command -v node)

# Configure clang to avoid module issues in Xcode 16
export CC=$(xcrun --find clang)
export CXX=$(xcrun --find clang++)

# Disable module verifier to avoid compatibility issues
export CLANG_MODULES_BUILD_SESSION_FILE=/tmp/clang-modules-build-session
export CLANG_ENABLE_MODULE_VERIFIER=NO
export CLANG_ENABLE_EXPLICIT_MODULES=NO
